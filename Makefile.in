INSTALL	= @INSTALL@
prefix	= @prefix@
exec_prefix = @exec_prefix@
bindir	= @bindir@
mandir	= @mandir@
datadir	= @datadir@
sharedir= $(datadir)/shmux

shmux:
	@(cd src && $(MAKE) shmux)

test: shmux
	@(cd tests && ./runall)

install: shmux
	$(INSTALL) -d -m 0755 $(DESTDIR)$(bindir)
	$(INSTALL) -m 755 src/shmux $(DESTDIR)$(bindir)
	$(INSTALL) -d -m 0755 $(DESTDIR)$(mandir)/man1
	$(INSTALL) -m 644 shmux.1 $(DESTDIR)$(mandir)/man1
	$(INSTALL) -d -m 0755 $(DESTDIR)$(sharedir)
	$(INSTALL) -m 644 mcmd.sh $(DESTDIR)$(sharedir)
	@echo ; echo "Done!"

clean:
	@(cd src && $(MAKE) clean)

distclean:
	@(cd src && $(MAKE) distclean)
	/bin/rm -f Makefile config.* configure.lineno
	/bin/rm -rf autom4te.cache
